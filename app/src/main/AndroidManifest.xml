        </activity>
        <activity
            android:name="mathieu.com.outerspacemanager.outerspacemanager.activity.FlotteActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="mathieu.com.outerspacemanager.outerspacemanager.activity.ChantierSpatialActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="mathieu.com.outerspacemanager.outerspacemanager.activity.GeneraleRapportActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="mathieu.com.outerspacemanager.outerspacemanager.activity.BuildingDetailsActivity"
