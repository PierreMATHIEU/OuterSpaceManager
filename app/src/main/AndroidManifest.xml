            </intent-filter>
        </activity>
        <activity
            android:name="mathieu.com.outerspacemanager.outerspacemanager.activity.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="mathieu.com.outerspacemanager.outerspacemanager.activity.BuildingActivity"
