        <TextView
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>
</LinearLayout>